{
  "compilerOptions": {
    "outDir": "./node_modules/.cache/typescript",
    "allowJs": true,
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ]
  },
  "include": [
    "./src/**/*",
    "build.ts"
  ]
}